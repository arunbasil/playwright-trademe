{
  "name": "plawright-trademe",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "test": "npx playwright test",
    "test:ui": "npx playwright test --ui",
    "test:headed": "npx playwright test --headed",
    "test:debug": "npx playwright test --debug",
    "test:report": "npx playwright show-report",
    "test:sanity": "npx playwright test --grep @sanity",
    "test:regression": "npx playwright test --grep @regression",
    "test:home": "npx playwright test --grep @home",
    "test:motors": "npx playwright test --grep @motors",
    "test:property":  "npx playwright test --grep @property",
    "allure:generate": "allure generate allure-results --clean -o allure-report",
    "allure:open":     "allure open allure-report",
    "allure:report":   "npm run allure:generate && npm run allure:open",
    "test:allure":     "npx playwright test && npm run allure:generate"
  },
